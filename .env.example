# Copy this file to .env and fill in your values
# cp .env.example .env

# ===========================================
# Database Configuration
# ===========================================

# For LOCAL PostgreSQL (default setup):
DB_NAME=mimiciv
# Django DB config (matches docker-compose)
DB_NAME=sepsis
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432
DB_SCHEMA=mimiciv_derived

# For AWS RDS (after running terraform apply):
# Get these values with: cd terraform && terraform output
# Or auto-generate: terraform output -raw env_file_content > ../.env
#
# DB_NAME=mimiciv
# DB_USER=postgres
# DB_PASSWORD=<from terraform.tfvars>
# DB_HOST=<from terraform output db_address>
# DB_PORT=5432
# DB_SCHEMA=mimiciv_derived

# ===========================================
# Django Settings (optional)
# ===========================================

# Django secret key (generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
# SECRET_KEY=your-secret-key-here

# Debug mode (set to False in production)
# DEBUG=True

# Allowed hosts (comma-separated, no spaces)
# ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# Application Settings (optional)
# ===========================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO
DB_SCHEMA=public

SECRET_KEY=dev_secret_key
DEBUG=True

# Model service (external HTTPS prediction API)
# Leave empty to use stub predictions for local dev
MODEL_SERVICE_URL=
MODEL_SERVICE_TIMEOUT=30
# MODEL_SERVICE_API_KEY=your_api_key_if_required

# S3 model IO storage
# If empty, app will skip S3 and derive history from DB rows only.
MODEL_S3_BUCKET=
MODEL_S3_REGION=us-east-1
MODEL_S3_PREFIX=model-io
MODEL_HISTORY_HOURS=6

# Optional explicit AWS credentials for temp/shared account access
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
# AWS_SESSION_TOKEN=required_if_using_sts_temp_credentials
